import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;
import java.util.Random;

public class nameCreator {

	public static Random rand = new Random();

	public static String names[] = new String[21985];

	public static String fullName, firstName, lastName, email;

	public static String emailServices[] = new String[] { "@Hotmail.com", "@Yahoo.com", "@Gmail.com", "@Outlook.com" };
	
	public static Integer total_visits = rand.nextInt(20);
	
	public static String lead_source[] = new String[] {"Google","Olark Chat","Direct Traffic","Organic Search","Referral Site"};
	
	public static String percentage_completion[] = new String[] {"25%", "50%","75%","100%"};
	
	public static Integer total_time_spent = rand.nextInt(30);
	
	public static Boolean new_business = rand.nextBoolean();
	
	public static Boolean get_updates = rand.nextBoolean();
	
	public static String lead_origin[] = new String[] {"API","Landing Page Submission"};
	
	public static Boolean do_not_email = rand.nextBoolean();

	public static Boolean do_not_call = rand.nextBoolean();
	
	public static Integer page_views = rand.nextInt(50);
	
	public static String[] last_activity = new String[] {"Page Visited on Website","Email Opened","Unreachable","Converted to Lead","Olark Chat Conversation","SMS Sent","Email Link Clicked","Form Submitted on Website","Email Bounced","Unsubscribed"};
	
	public static String[] page_type = new String[] {"Product","Career","Pricing","Promotion"};

	public static String[] lead_quality = new String[] {"Not Sure","Low","Worst","High"};
	
	public static String[] last_notable_activity = new String[] {"Email Opened", "Page Visited on Website", "Had a Phone Coversation", "Email Link Clicked","Unreachable",
			"Olark Chat Conversation","Email Bounced","SMS Sent","Unsubscribed","Form Submitted on Website","Had a Pone Conversation","SMS Sent"};
	
	public static void main(String[] args) {
		
		try {
			Scanner scanner = new Scanner(new File("names.txt"));
			int count = 0;
			while (scanner.hasNextLine()) {
				names[count] = (scanner.nextLine());
				count++;
			}
			scanner.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		firstName = names[rand.nextInt(21984)];
		lastName = names[rand.nextInt(21984)];
		fullName = firstName + " " + lastName;
		email = firstName + lastName + emailServices[rand.nextInt(3)];
		System.out.println("Name: " + fullName);
		System.out.println("Email:  " + email);
		System.out.println("Total Visits: " + total_visits);
		System.out.println("Lead Source: " + lead_source[rand.nextInt(4)]);
		System.out.println("Form Completion: " + percentage_completion[rand.nextInt(3)]);
		System.out.println("Total Time Spent: " + total_time_spent + " minutes");
		System.out.println("New Business: " + new_business);
		System.out.println("Get Updates: " + get_updates);
		System.out.println("Lead Origin: " + lead_origin[rand.nextInt(2)]);
		System.out.println("Do Not Email: " + do_not_email);
		System.out.println("Do Not Call: "+ do_not_call);
		System.out.println("Page Views: " + page_views);
		System.out.println("Last Activity: " + last_activity[rand.nextInt(9)]);
		System.out.println("Page Type: " + page_type[rand.nextInt(3)]);
		System.out.println("Lead Quality: " + lead_quality[rand.nextInt(3)]);
		System.out.println("Last Notable Activity: " + last_notable_activity[rand.nextInt(11)]);

	}

}
